<%- include('./header.ejs') %>

    <h1>Profile</h1>

    <br><br>
    <button class="btn btn-info text-white" data-bs-toggle="modal" data-bs-target="#profileUpdate">Update
        profile</button>

    <button class="btn btn-info text-white" data-bs-toggle="modal" data-bs-target="#changePassword">change
        Password</button>



    <!-- Modal profileUpdate -->
    <div class="modal fade" id="profileUpdate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel"><B class="Tech"></B></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/updateprofile" method="post" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label>Name</label>
                            <input type="text" value="<%= n %>" name="name" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label>Email</label>
                            <input type="text" value="<%= e %>" name="email" class="form-control">

                        </div>

                        <div class="mb-3">
                            <label>Image</label>
                            <input type="file" name="image" class="form-control">
                            <img src="<%= i.url %> " alt="" width="50">
                        </div>



                        <button type="submit" class="btn btn-info">update profile</button>
                    </form>

                </div>

            </div>
        </div>
    </div>

    <!-- Modal change password -->
    <div class="modal fade" id="changePassword" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel"><B class="Tech"></B></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/changePassword" method="post" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label>old password</label>
                            <input type="text" name="op" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label>New Password</label>
                            <input type="text" name="np" class="form-control">

                        </div>

                        <div class="mb-3">
                            <label>confirm Password</label>
                            <input type="text" name="cp" class="form-control">

                        </div>




                        <button type="submit" class="btn btn-info">change Password</button>
                    </form>

                </div>

            </div>
        </div>
    </div>


    <%- include('./footer.ejs') %>